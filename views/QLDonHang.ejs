                const isPaymentMatch = !paymentFilter || rowPayment === paymentFilter;
                const isSearchMatch = !searchInput || searchText.includes(searchInput);

                if (isStatusMatch && isPaymentMatch && isSearchMatch) {
                    row.style.display = '';

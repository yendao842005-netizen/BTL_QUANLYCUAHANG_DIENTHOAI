        .supplier-rating {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .supplier-rating.inline {
            display: inline-flex;
        }

        .supplier-rating .stars {
            display: flex;
            gap: 2px;
            color: #ffc107;
        }

        .supplier-rating .rating-value {
            font-weight: 600;
            font-size: 14px;
            min-width: 30px;
        }

        .stars.small {
            font-size: 12px;
        }

        .ranking-item {
            display: flex;
            align-items: center;
            padding: 15px;
            border-bottom: 1px solid #dee2e6;
            transition: all 0.3s ease;
        }

        .ranking-item:hover {
            background: rgba(67, 97, 238, 0.05);
        }

        .ranking-item.top {
            background: rgba(255, 193, 7, 0.05);
        }

        .ranking-rank {
            width: 30px;
            height: 30px;
            background: #4361ee;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            margin-right: 15px;
        }

        .ranking-item.top .ranking-rank {
            background: #ffc107;
        }

        .ranking-info {
            flex: 1;
        }

        .ranking-name {
            font-weight: 500;
            margin-bottom: 5px;
        }

        .ranking-details {
            display: flex;
            gap: 10px;
            font-size: 12px;
            color: #6c757d;
        }

        .detail-item {
            padding-right: 10px;
            border-right: 1px solid #dee2e6;
        }

        .detail-item:last-child {
            border-right: none;
        }

        .ranking-performance {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .contracts-list {
            max-height: 300px;
            overflow-y: auto;
        }

        .contract-item {
            padding: 15px;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            margin-bottom: 10px;
            transition: all 0.3s ease;
        }

        .contract-item:hover {
            border-color: #4361ee;
            box-shadow: 0 2px 10px rgba(67, 97, 238, 0.1);
        }

        .contract-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .contract-supplier {
            font-weight: 500;
        }

        .contract-number {
            font-size: 12px;
            color: #6c757d;
            background: #f8f9fa;
            padding: 2px 8px;
            border-radius: 12px;
        }

        .contract-details {
            margin-bottom: 10px;
        }

        .contract-details .detail-item {
            display: flex;
            align-items: center;
            gap: 5px;
            margin-bottom: 5px;
            font-size: 13px;
            border: none;
        }

        .contract-actions {
            display: flex;
            gap: 10px;
            justify-content: flex-end;
        }

        .rating-input {
            margin-bottom: 15px;
        }

        .rating-input .stars {
            display: flex;
            gap: 10px;
            margin-bottom: 5px;
        }

        .rating-input .stars i {
            color: #e0e0e0;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .rating-input .stars i:hover {
            color: #ffc107;

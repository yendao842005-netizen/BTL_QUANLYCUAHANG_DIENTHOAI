        // Sửa nhân viên
        function editEmployee(employeeCode) {
            const employee = getEmployeeByCode(employeeCode);
            if (!employee) {
                alert('Không tìm thấy nhân viên!');
                return;
            }

            // Điền thông tin vào form chỉnh sửa
            document.getElementById('editMaNV').value = employee.MaNV;
            document.getElementById('displayMaNV').value = employee.MaNV;
            document.querySelector('#editEmployeeForm input[name="HoTen"]').value = employee.HoTen;
            document.querySelector('#editEmployeeForm input[name="SoDienThoai"]').value = employee.SoDienThoai;
            document.querySelector('#editEmployeeForm input[name="Email"]').value = employee.Email;
            document.querySelector('#editEmployeeForm input[name="NgaySinh"]').value = employee.NgaySinh || '';
            document.querySelector('#editEmployeeForm select[name="GioiTinh"]').value = employee.GioiTinh || '';
            document.querySelector('#editEmployeeForm textarea[name="DiaChi"]').value = employee.DiaChi || '';
            document.querySelector('#editEmployeeForm select[name="ChucVu"]').value = employee.ChucVu;
            document.querySelector('#editEmployeeForm select[name="PhongBan"]').value = employee.PhongBan;
            document.querySelector('#editEmployeeForm input[name="NgayVaoLam"]').value = employee.NgayVaoLam;
            document.querySelector('#editEmployeeForm input[name="LuongCoBan"]').value = employee.LuongCoBan;
            document.querySelector('#editEmployeeForm select[name="HopDong"]').value = employee.HopDong || 'permanent';
            document.querySelector('#editEmployeeForm input[name="HeSoLuong"]').value = employee.HeSoLuong || '1.0';


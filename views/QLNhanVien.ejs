            openModal('editEmployeeModal');
        }

        // Cập nhật nhân viên
        function updateEmployee() {
            const form = document.getElementById('editEmployeeForm');
            const formData = new FormData(form);
            const employeeCode = formData.get('MaNV');

            // Lấy giá trị từ form
            const updatedEmployee = {
                MaNV: employeeCode,
                HoTen: formData.get('HoTen'),
                SoDienThoai: formData.get('SoDienThoai'),
                Email: formData.get('Email'),
                NgaySinh: formData.get('NgaySinh'),
                GioiTinh: formData.get('GioiTinh'),
                DiaChi: formData.get('DiaChi'),
                ChucVu: formData.get('ChucVu'),
                PhongBan: formData.get('PhongBan'),
                NgayVaoLam: formData.get('NgayVaoLam'),
                LuongCoBan: parseInt(formData.get('LuongCoBan')),
                HopDong: formData.get('HopDong'),
                HeSoLuong: parseFloat(formData.get('HeSoLuong')) || 1.0,
                HieuSuat: currentEmployee?.HieuSuat || 0,
                DoanhSo: currentEmployee?.DoanhSo || 0,
                TrangThai: 'active'
            };

            // Cập nhật dữ liệu trong bảng
            const row = document.querySelector(`tr[data-employee*='"MaNV":"${employeeCode}"']`);
            if (row) {
                // Cập nhật data attribute
                const oldData = JSON.parse(row.getAttribute('data-employee'));
                const newData = { ...oldData, ...updatedEmployee };
                row.setAttribute('data-employee', JSON.stringify(newData));

                // Cập nhật hiển thị trong bảng
                const employeeNameCell = row.cells[1];
                employeeNameCell.querySelector('.employee-name').innerHTML = `
                    ${updatedEmployee.HoTen}
                    ${updatedEmployee.ChucVu === 'Quản lý' ? '<i class="fas fa-shield-alt text-primary ms-1" title="Quản trị"></i>' : ''}
                `;

                // Cập nhật chức vụ
                row.cells[2].textContent = updatedEmployee.ChucVu;

                // Cập nhật phòng ban
                const departmentCell = row.cells[3];
                const departmentName = getDepartmentName(updatedEmployee.PhongBan);
                departmentCell.innerHTML = `<span class="department ${updatedEmployee.PhongBan}">${departmentName}</span>`;

                // Cập nhật lương
                row.cells[4].innerHTML = `<strong>${formatCurrency(updatedEmployee.LuongCoBan)}</strong>`;

                // Giữ nguyên hiệu suất và trạng thái
                // Các ô 5 và 6 giữ nguyên giá trị cũ
            }

            alert('Đã cập nhật nhân viên thành công!');
            closeModal('editEmployeeModal');
            updateStats();
        }

        // Lưu nhân viên mới
        function saveEmployee() {
            const form = document.getElementById('addEmployeeForm');
            const formData = new FormData(form);

            // Validate
            if (!formData.get('MaNV') || !formData.get('HoTen') || 
                !formData.get('SoDienThoai') || !formData.get('Email') ||
                !formData.get('ChucVu') || !formData.get('PhongBan') ||
                !formData.get('NgayVaoLam') || !formData.get('LuongCoBan')) {
                alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
                return;
            }

            const newEmployee = {
                MaNV: formData.get('MaNV'),
                HoTen: formData.get('HoTen'),
                SoDienThoai: formData.get('SoDienThoai'),
                Email: formData.get('Email'),
                NgaySinh: formData.get('NgaySinh'),
                GioiTinh: formData.get('GioiTinh'),
                DiaChi: formData.get('DiaChi'),
                ChucVu: formData.get('ChucVu'),
                PhongBan: formData.get('PhongBan'),
                NgayVaoLam: formData.get('NgayVaoLam'),
                LuongCoBan: parseInt(formData.get('LuongCoBan')),
                HopDong: formData.get('HopDong') || 'permanent',
                HeSoLuong: parseFloat(formData.get('HeSoLuong')) || 1.0,
                HieuSuat: 0,
                DoanhSo: 0,
                TrangThai: 'active'
            };

            // Kiểm tra mã nhân viên đã tồn tại chưa
            if (getEmployeeByCode(newEmployee.MaNV)) {
                alert('Mã nhân viên đã tồn tại!');
                return;
            }

            // Thêm hàng mới vào bảng
            const tableBody = document.querySelector('#employeesTable tbody');
            const newRow = document.createElement('tr');
            newRow.setAttribute('data-employee', JSON.stringify(newEmployee));

            const departmentName = getDepartmentName(newEmployee.PhongBan);

            newRow.innerHTML = `
                <td><strong>${newEmployee.MaNV}</strong></td>
                <td>
                    <div class="employee-name">
                        ${newEmployee.HoTen}
                        ${newEmployee.ChucVu === 'Quản lý' ? '<i class="fas fa-shield-alt text-primary ms-1" title="Quản trị"></i>' : ''}
                    </div>
                </td>
                <td>${newEmployee.ChucVu}</td>
                <td>
                    <span class="department ${newEmployee.PhongBan}">${departmentName}</span>
                </td>
                <td><strong>${formatCurrency(newEmployee.LuongCoBan)}</strong></td>
                <td>
                    <div class="performance-indicator">
                        <span class="performance-value">0%</span>
                        <div class="performance-bar">
                            <div class="performance-fill" style="width: 0%"></div>
                        </div>
                    </div>
                </td>
                <td>
                    <span class="status active">Đang làm</span>
                </td>
                <td>
                    <div class="action-buttons">
                        <button class="action-btn view-btn" title="Xem chi tiết" onclick="viewEmployeeDetail('${newEmployee.MaNV}')">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="action-btn edit-btn" title="Sửa" onclick="editEmployee('${newEmployee.MaNV}')">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="action-btn delete-btn" title="Xóa" onclick="deleteEmployee('${newEmployee.MaNV}')">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </td>
            `;

            tableBody.appendChild(newRow);

            // Cập nhật số liệu thống kê
            updateStats();

            alert('Đã thêm nhân viên mới thành công!');
            closeModal('addEmployeeModal');
            form.reset();
        }

        // Xóa nhân viên
        function deleteEmployee(employeeCode) {
            if (!confirm(`Bạn có chắc chắn muốn xóa nhân viên ${employeeCode}?`)) {
                return;
            }

            const row = document.querySelector(`tr[data-employee*='"MaNV":"${employeeCode}"']`);
            if (row) {
                row.style.opacity = '0.5';
                setTimeout(() => {
                    row.remove();
                    updateStats();
                    alert('Đã xóa nhân viên thành công!');
                }, 300);
            }
        }

        // Helper functions
        function getDepartmentName(departmentCode) {
            switch(departmentCode) {
                case 'sales': return 'Bán hàng';
                case 'warehouse': return 'Kho';
                case 'technical': return 'Kỹ thuật';
                case 'accounting': return 'Kế toán';
                case 'management': return 'Quản lý';
                default: return departmentCode;
            }
        }

        // Cập nhật thống kê
        function updateStats() {
            const rows = document.querySelectorAll('#employeesTable tbody tr');
            const totalEmployees = rows.length;

            let totalSalary = 0;
            let totalSales = 0;
            let totalPerformance = 0;

            rows.forEach(row => {
                const employee = JSON.parse(row.getAttribute('data-employee'));
                totalSalary += employee.LuongCoBan;
                totalSales += employee.DoanhSo || 0;
                totalPerformance += employee.HieuSuat || 0;
            });

            const avgPerformance = totalEmployees > 0 ? Math.round(totalPerformance / totalEmployees) : 0;

            // Cập nhật thống kê
            document.getElementById('statTotalEmployees').textContent = totalEmployees;
            document.getElementById('statTotalSalary').textContent = 
                formatCurrency(totalSalary).replace('₫', '');
            document.getElementById('statTotalSales').textContent = 
                formatCurrency(totalSales).replace('₫', '');
            document.getElementById('statAvgPerformance').textContent = `${avgPerformance}%`;
        }

        // Lọc bảng
        function filterTable() {
            const departmentFilter = document.getElementById('departmentFilter').value;
            const statusFilter = document.getElementById('statusFilter').value;
            const searchInput = document.getElementById('employeeSearch').value.toLowerCase();
            const rows = document.querySelectorAll('#employeesTable tbody tr');

            rows.forEach(row => {
                const employee = JSON.parse(row.getAttribute('data-employee'));
                const rowDepartment = employee.PhongBan;
                const rowStatus = employee.TrangThai;
                const searchText = employee.HoTen.toLowerCase() + ' ' + 
                                 employee.MaNV.toLowerCase() + ' ' + 
                                 employee.SoDienThoai.toLowerCase() + ' ' + 
                                 employee.Email.toLowerCase();

                const isDepartmentMatch = !departmentFilter || rowDepartment === departmentFilter;
                const isStatusMatch = !statusFilter || rowStatus === statusFilter;
                const isSearchMatch = !searchInput || searchText.includes(searchInput);

                if (isDepartmentMatch && isStatusMatch && isSearchMatch) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }


        /* ========== PERFORMANCE RANKING ========== */
        .performance-ranking {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .ranking-item {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 15px;
            background: var(--light);
            border-radius: var(--border-radius-sm);
            transition: var(--transition);
            border-left: 4px solid var(--primary);
        }

        .ranking-item.top {
            background: linear-gradient(to right, rgba(67, 97, 238, 0.05), rgba(76, 201, 240, 0.05));
            border-left-color: var(--info);
        }

        .ranking-item:hover {
            transform: translateX(5px);
            box-shadow: var(--box-shadow);
        }

        .ranking-rank {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--primary);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 18px;
        }

        .ranking-item.top .ranking-rank {
            background: linear-gradient(135deg, var(--info) 0%, var(--info-dark) 100%);
        }

        .ranking-info {
            flex: 1;
        }

        .ranking-name {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 3px;
        }

        .ranking-position {
            font-size: 13px;
            color: var(--gray);
        }

        .ranking-performance {
            text-align: right;
            min-width: 80px;
        }

        /* ========== SALARY STATS ========== */
        .salary-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
        }

        .salary-stat-item {
            background: var(--light);
            padding: 15px;
            border-radius: var(--border-radius-sm);
            text-align: center;
            border: 1px solid var(--border-color);
            transition: var(--transition);
        }

        .salary-stat-item:hover {
            transform: translateY(-3px);
            box-shadow: var(--box-shadow);
            border-color: var(--primary-light);
        }

        .stat-label {
            font-size: 13px;
            color: var(--gray);
            margin-bottom: 8px;
            font-weight: 500;
        }

        .stat-value {
            font-size: 18px;
            font-weight: 700;
            color: var(--primary);
        }

        /* ========== ACCOUNT LIST ========== */
        .account-list {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .account-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 15px;
            background: var(--light);
            border-radius: var(--border-radius-sm);
            transition: var(--transition);
            border-left: 4px solid transparent;
        }

        .account-item:hover {
            background: var(--primary-extra-light);
            transform: translateX(5px);
            border-left-color: var(--primary);
        }

        .account-status {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: var(--success);
        }

        .account-status.active {
            background: var(--info);
        }

        .account-status.inactive {
            background: var(--danger);
        }

        .account-info {
            flex: 1;
        }

        .account-id {
            font-weight: 600;
            color: var(--dark);
            font-size: 14px;
            margin-bottom: 2px;
        }

        .account-details {
            font-size: 12px;
            color: var(--gray);
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .account-actions {
            display: flex;
            gap: 8px;
            opacity: 0;
            transition: var(--transition);
        }

        .account-item:hover .account-actions {
            opacity: 1;
        }

        .account-action-btn {
            width: 30px;
            height: 30px;
            border-radius: var(--border-radius-sm);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: var(--transition);
            border: none;
            font-size: 12px;
        }

        .account-view-btn {
            background: rgba(67, 97, 238, 0.1);
            color: var(--primary);
        }

        .account-view-btn:hover {
            background: var(--primary);
            color: white;
        }

        .account-edit-btn {
            background: rgba(6, 214, 160, 0.1);
            color: var(--info);
        }

        .account-edit-btn:hover {
            background: var(--info);
            color: white;
        }

        .account-delete-btn {
            background: rgba(239, 35, 60, 0.1);
            color: var(--danger);
        }

        .account-delete-btn:hover {
            background: var(--danger);
            color: white;
        }

        /* ========== INLINE PERFORMANCE ========== */
        .performance-indicator.inline {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .performance-indicator.inline .performance-bar {
            flex: 1;
            max-width: 100px;
        }

        /* ========== DETAIL SECTION ========== */
        .detail-section {
            background: var(--light);
            padding: 20px;
            border-radius: var(--border-radius-sm);
            margin-bottom: 20px;
        }

        .detail-section h5 {
            display: flex;
            align-items: center;
            gap: 10px;
            color: var(--primary);
            margin-bottom: 15px;
            font-size: 16px;
        }

        .detail-section h5 i {
            width: 20px;
        }

        .detail-table {
            width: 100%;
        }

        .detail-table tr {
            border-bottom: 1px solid var(--border-color);
        }

        .detail-table tr:last-child {
            border-bottom: none;
        }

        .detail-table td {
            padding: 8px 0;
            border: none;
        }

        .detail-table td:first-child {
            width: 40%;
            color: var(--gray);
        }

        /* ========== DEPARTMENT BADGES ========== */
        .department {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            display: inline-block;
        }

        .department.management {
            background: rgba(67, 97, 238, 0.1);
            color: var(--primary);
            border: 1px solid rgba(67, 97, 238, 0.2);
        }

        .department.sales {

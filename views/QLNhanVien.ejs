                TrangThai: formData.get('TrangThai'),
                GhiChu: formData.get('GhiChu'),
                NgayTao: currentAccount?.NgayTao || new Date().toISOString().split('T')[0]
            };

            // Cập nhật mật khẩu nếu có
            const newPassword = formData.get('MatKhau');
            if (newPassword) {
                updatedAccount.MatKhau = newPassword;
            } else {
                updatedAccount.MatKhau = currentAccount?.MatKhau || '';
            }

            // Cập nhật dữ liệu mẫu
            sampleAccounts[accountCode] = { ...sampleAccounts[accountCode], ...updatedAccount };

            // Cập nhật hiển thị trong danh sách
            updateAccountDisplay(accountCode, updatedAccount);

            alert('Đã cập nhật tài khoản thành công!');
            closeModal('editAccountModal');
            currentAccount = updatedAccount;
        }

        // Cập nhật hiển thị tài khoản trong danh sách
        function updateAccountDisplay(accountCode, accountData) {
            const accountItems = document.querySelectorAll('.account-item');
            accountItems.forEach(item => {
                const accountIdElement = item.querySelector('.account-id');
                if (accountIdElement && accountIdElement.textContent === accountCode) {
                    // Cập nhật trạng thái
                    const statusElement = item.querySelector('.account-status');
                    if (statusElement) {
                        statusElement.className = `account-status ${accountData.TrangThai}`;
                    }

                    // Cập nhật thông tin chi tiết
                    const detailsElement = item.querySelector('.account-details');
                    if (detailsElement) {
                        const employeeName = getEmployeeName(accountData.MaNV);
                        const permissionName = getPermissionName(accountData.QuyenHan);
                        detailsElement.innerHTML = `
                    <span>${accountData.MaNV} - ${employeeName}</span>
                    <span>|</span>
                    <span>${permissionName}</span>
                `;
                    }
                }
            });
        }

        // Lưu tài khoản mới
        function saveAccount() {
            const form = document.getElementById('addAccountForm');
            const formData = new FormData(form);

            // Validate
            if (!formData.get('MaTK') || !formData.get('MaNV') ||
                !formData.get('TenDangNhap') || !formData.get('MatKhau') ||
                !formData.get('QuyenHan') || !formData.get('TrangThai')) {
                alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
                return;
            }

            const accountCode = formData.get('MaTK');

            // Kiểm tra mã tài khoản đã tồn tại chưa
            if (sampleAccounts[accountCode]) {
                alert('Mã tài khoản đã tồn tại!');
                return;
            }

            const newAccount = {
                MaTK: accountCode,
                MaNV: formData.get('MaNV'),
                TenDangNhap: formData.get('TenDangNhap'),
                MatKhau: formData.get('MatKhau'),
                QuyenHan: formData.get('QuyenHan'),
                NgayTao: new Date().toISOString().split('T')[0],
                TrangThai: formData.get('TrangThai'),
                GhiChu: formData.get('GhiChu') || ''
            };

            // Thêm vào dữ liệu mẫu
            sampleAccounts[accountCode] = newAccount;

            // Thêm vào danh sách hiển thị
            const accountList = document.querySelector('.account-list');
            if (accountList) {
                const newAccountItem = document.createElement('div');
                newAccountItem.className = 'account-item';
                newAccountItem.innerHTML = `
            <div class="account-status ${newAccount.TrangThai}"></div>
            <div class="account-info">
                <div class="account-id">${newAccount.MaTK}</div>
                <div class="account-details">
                    <span>${newAccount.MaNV} - ${getEmployeeName(newAccount.MaNV)}</span>
                    <span>|</span>
                    <span>${getPermissionName(newAccount.QuyenHan)}</span>
                </div>
            </div>
            <div class="account-actions">
                <button class="account-action-btn account-view-btn" title="Xem chi tiết" onclick="viewAccountDetail('${newAccount.MaTK}')">
                    <i class="fas fa-eye"></i>
                </button>
                <button class="account-action-btn account-edit-btn" title="Sửa" onclick="editAccount('${newAccount.MaTK}')">
                    <i class="fas fa-edit"></i>
                </button>
                <button class="account-action-btn account-delete-btn" title="Xóa" onclick="deleteAccount('${newAccount.MaTK}')">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
        `;
                accountList.appendChild(newAccountItem);
            }

            alert('Đã thêm tài khoản mới thành công!');
            closeModal('addAccountModal');
            form.reset();
        }

        // Xóa tài khoản
        function deleteAccount(accountCode) {
            if (!confirm(`Bạn có chắc chắn muốn xóa tài khoản ${accountCode}?`)) {
                return;
            }

            // Xóa khỏi dữ liệu mẫu
            delete sampleAccounts[accountCode];

            // Xóa khỏi danh sách hiển thị
            const accountItems = document.querySelectorAll('.account-item');
            accountItems.forEach(item => {
                const accountIdElement = item.querySelector('.account-id');
                if (accountIdElement && accountIdElement.textContent === accountCode) {
                    item.style.opacity = '0.5';
                    setTimeout(() => {
                        item.remove();
                        alert('Đã xóa tài khoản thành công!');
                    }, 300);
                }
            });
        }

        // Xử lý sự kiện khi DOM tải xong
        document.addEventListener('DOMContentLoaded', function () {
            // Xử lý đóng modal khi click bên ngoài
            document.querySelectorAll('.modal').forEach(modal => {
                modal.addEventListener('click', function (e) {
                    if (e.target === this) {
                        this.style.display = 'none';
                    }
                });
            });
        });
    </script>

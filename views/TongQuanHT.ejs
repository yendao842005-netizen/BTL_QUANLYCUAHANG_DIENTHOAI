                        <div class="menu-text">Báo cáo</div>
                    </a>
                    <!-- <a href="settings.html" class="menu-item">
                        <div class="menu-icon">
                            <i class="fas fa-cog"></i>
                        </div>
                        <div class="menu-text">Cài đặt</div>
                    </a> -->

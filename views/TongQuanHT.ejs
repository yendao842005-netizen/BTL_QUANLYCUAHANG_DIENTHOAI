                    </div>
                    <div class="page-actions">
                        <button class="btn btn-outline">
                            <i class="fas fa-download"></i> Xuất báo cáo
                        </button>
                        <!-- <button class="btn btn-primary">
                            <i class="fas fa-plus"></i> Tạo mới
                        </button> -->
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="dashboard-cards">
                    <div class="card">
                        <div class="card-header">
                            <div>
                                <div class="card-title">Doanh thu tháng này </div>
                                <div class="card-value">125.4 triệu</div>
                                <div class="card-change positive">
                                    <i class="fas fa-arrow-up"></i>
                                    <span>12.5% so với tháng trước</span>
                                </div>
                            </div>
                            <div class="card-icon sales">
                                <i class="fas fa-chart-line"></i>
                            </div>
                        </div>
                        <div class="card-footer">
                            <i class="fas fa-info-circle"></i>
                            Tổng doanh thu: 2.5 tỷ (tháng 4)
                        </div>
                    </div>
                    
                    <div class="card">
                        <div class="card-header">
                            <div>
                                <div class="card-title">Tổng đơn hàng</div>
                                <div class="card-value">1,248</div>
                                <div class="card-change positive">
                                    <i class="fas fa-arrow-up"></i>
                                    <span>5.2% so với tháng trước</span>
                                </div>
                            </div>
                            <div class="card-icon products">
                                <i class="fas fa-shopping-bag"></i>
                            </div>
                        </div>
                        <div class="card-footer">
                            <i class="fas fa-info-circle"></i>
                            15 đơn đang chờ xử lý
                        </div>
                    </div>
                    
                    <div class="card">
                        <div class="card-header">
                            <div>
                                <div class="card-title">Khách hàng mới</div>
                                <div class="card-value">48</div>
                                <div class="card-change negative">
                                    <i class="fas fa-arrow-down"></i>
                                    <span>2.1% so với tháng trước</span>
                                </div>
                            </div>
                            <div class="card-icon customers">
                                <i class="fas fa-user-plus"></i>
                            </div>
                        </div>
                        <div class="card-footer">
                            <i class="fas fa-info-circle"></i>
                            Tổng khách hàng: 1,856
                        </div>
                    </div>
                    
                    <div class="card">
                        <div class="card-header">
                            <div>
                                <div class="card-title">Sản phẩm tồn kho</div>
                                <div class="card-value">892</div>
                                <div class="card-change positive">
                                    <i class="fas fa-arrow-up"></i>
                                    <span>8.3% so với tháng trước</span>
                                </div>
                            </div>
                            <div class="card-icon revenue">
                                <i class="fas fa-boxes"></i>
                            </div>
                        </div>
                        <div class="card-footer">
                            <i class="fas fa-info-circle"></i>
                            12 sản phẩm sắp hết hàng
                        </div>
                    </div>
                </div>

